{
  "manifest_version": 3,
  "name": "Tab Limiter",
  "description": "Limit the maximum number of open tabs across all windows.",
  "version": "1.0.0",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

{
  "manifest_version": 3,
  "name": "Tab Limiter",
  "description": "Limit the maximum number of open tabs across all windows.",
  "version": "1.1.0",
  "permissions": ["tabs", "storage", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Limiter"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
